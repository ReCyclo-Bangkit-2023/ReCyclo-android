<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.authentication.register.RegisterActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:scaleType="fitCenter"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="103dp"
        >



        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="107dp"
            android:layout_marginBottom="20dp"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="41dp"
            app:cardElevation="4dp"
            android:paddingVertical="58dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingHorizontal="10dp"
           >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="32dp">

                <TextView
                    android:id="@+id/masuk_ke_ak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="43dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginEnd="38dp"
                    android:text="@string/title_register"
                    android:textAppearance="@style/masuk_ke_ak"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:id="@+id/register_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"

                    android:background="@drawable/input_auth"
                    android:hint="@string/masukan_nama_anda"
                    android:paddingVertical="10dp"

                    android:paddingLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/masuk_ke_ak"

                    tools:layout_editor_absoluteX="24dp" />


                <EditText
                    android:id="@+id/register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"

                    android:background="@drawable/input_auth"
                    android:hint="@string/login_email"
                    android:paddingVertical="10dp"

                    android:paddingLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/register_name"

                    tools:layout_editor_absoluteX="24dp" />


                <EditText
                    android:id="@+id/register_address"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"

                    android:layout_marginTop="32dp"
                    android:background="@drawable/input_auth_address"
                    android:hint="@string/address_hint"

                    android:paddingVertical="10dp"

                    android:paddingLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/register_email"
                    tools:layout_editor_absoluteX="32dp" />

                <EditText
                    android:id="@+id/register_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"

                    android:background="@drawable/input_auth"

                    android:hint="@string/phone_hint"
                    android:paddingVertical="10dp"
                    android:paddingLeft="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/register_city" />

                <EditText
                    android:id="@+id/register_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"

                    android:layout_marginTop="32dp"
                    android:background="@drawable/input_auth"

                    android:hint="@string/city_hint"

                    android:paddingVertical="10dp"
                    android:paddingLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/register_address"
                    tools:layout_editor_absoluteX="32dp" />

                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/input_auth"
                    android:hint="@string/password_hint"

                    android:inputType="textPassword"

                    android:paddingVertical="10dp"
                    android:paddingLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/register_phone"
                    tools:layout_editor_absoluteX="32dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/register"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="58dp"
                    android:background="@color/cta_purple"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/sign_up"
                    android:textColor="@color/white"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/register_password" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>